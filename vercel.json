{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "PRISMA_GENERATE_DATAPROXY": "false"
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/monthly-chef-statements",
      "schedule": "0 3 1 * *"
    },
    {
      "path": "/api/cron/leaderboard",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/cron/chef-tax-summaries",
      "schedule": "0 4 15 1 *"
    },
    {
      "path": "/api/cron/currency-rates",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/cron/sla",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/prep-reminders",
      "schedule": "0 8 * * *"
    }
  ]
}
